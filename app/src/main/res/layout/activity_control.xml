
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/socket_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    tools:context=".ControlActivity">

    <TextView
        android:id="@+id/Gear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_gravity="right"
        android:layout_row="15"
        android:gravity="left"
        android:text="Gear"
        android:layout_marginRight="10dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />


    <ToggleButton
        android:id="@+id/load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:layout_row="18"
        android:text="Ladunek"
        android:textOff="Close"

        android:textOn="Open"
        android:layout_marginLeft="5dp" />
    <RadioGroup
        android:layout_column="4"
        android:layout_row="16"
        android:layout_rowSpan="3"

        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_marginRight="10dp"

        >
        <RadioButton
            android:id="@+id/firstGear"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:buttonTint="@color/colorAccent"
            android:text="@string/firstGear"
            />

        <RadioButton
            android:id="@+id/secondGear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/secondGear"
            android:buttonTint="@color/colorAccent" />


        <RadioButton
            android:id="@+id/thirdGear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thirdGear"
            android:buttonTint="@color/colorAccent" />


    </RadioGroup>

    <WebView
        android:id="@+id/webView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_rowSpan="13"
        android:paddingTop="10dp"
        android:layout_marginBottom="75dp"
        />


    <LinearLayout
        android:layout_row="14"
        android:layout_column="1"
        android:layout_rowSpan="5"
        android:layout_columnSpan="3"
        android:id="@+id/layout_controller"
        android:layout_width="241dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_gravity="center|bottom"
        android:gravity="right"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="@drawable/image_button_bg" >
    </LinearLayout>


</GridLayout>
